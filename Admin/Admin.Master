<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Admin.master.cs" Inherits="LaptopZone_project.Admin.Admin" %>

<!DOCTYPE html>
<html lang="vi">
<head runat="server">
    <title>Admin Dashboard - LaptopZone</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@700;800;900&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        /* --- Updated High-Tech Logo for Admin Panel --- */
        .brand-name-admin {
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            font-size: 20px;
            letter-spacing: -1.2px;
            color: #2d3436;
            display: flex;
            align-items: baseline;
            line-height: 1;
            text-transform: uppercase;
        }

        .highlight-z-admin {
            font-size: 30px;
            font-weight: 900;
            background: linear-gradient(135deg, #00d2ff 0%, #0984e3 50%, #6c5ce7 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
            filter: drop-shadow(0 2px 4px rgba(9, 132, 227, 0.2));
            margin-left: 2px;
        }

        /* Chữ ONE: Gradient Blue đồng bộ nhận diện */
        .one-text-admin {
            background: linear-gradient(to bottom, #0984e3, #0773c5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 18px;
            font-weight: 800;
        }

        /* Custom Scrollbar */
        .custom-scrollbar::-webkit-scrollbar {
            width: 4px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 10px;
        }

        /* Menu Active State */
        .nav-item-active {
            background-color: #f0f7ff;
            color: #0984e3 !important;
            border-right: 3px solid #0984e3;
            font-weight: 600;
        }

            .nav-item-active span {
                font-variation-settings: 'FILL' 1;
            }

        @keyframes ring {
            0%, 100%, 50% {
                transform: rotate(0);
            }

            10%, 30% {
                transform: rotate(15deg);
            }

            20%, 40% {
                transform: rotate(-15deg);
            }
        }

        .animate-ring {
            animation: ring 1.5s ease infinite;
        }
    </style>
    <asp:ContentPlaceHolder ID="head" runat="server"></asp:ContentPlaceHolder>
</head>
<body class="bg-[#f8fafc] text-[#1e293b]">
    <form id="form1" runat="server">
        <div class="flex h-screen overflow-hidden">
            <aside class="w-64 flex-shrink-0 border-r border-slate-200 bg-white flex flex-col h-full z-20 shadow-sm">
                <div class="p-6 border-b border-slate-50">
                    <a href="Dashboard.aspx" class="flex flex-col items-start no-underline group">
                        <h1 class="brand-name-admin">LAPTOP<span class="flex items-baseline"><span class="highlight-z-admin">Z</span><span class="one-text-admin">ONE</span></span>
                        </h1>
                        <p class="text-[9px] font-bold text-slate-400 uppercase tracking-[0.2em] mt-1 ml-0.5">Admin Panel</p>
                    </a>
                </div>

                <nav class="flex-1 px-3 py-6 flex flex-col gap-1 overflow-y-auto custom-scrollbar">
                    <a href="Dashboard.aspx" id="nav_dash" runat="server" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-500 hover:bg-slate-50 transition-all group">
                        <span class="material-symbols-outlined text-[22px] group-hover:scale-110 transition-transform">dashboard</span>
                        <span class="text-[13px] font-medium">Tổng quan hệ thống</span>
                    </a>

                    <div class="pt-5 pb-2 px-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">Quản lý cửa hàng</div>

                    <a href="QuanLyLaptop.aspx" id="nav_laptop" runat="server" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-500 hover:bg-slate-50 transition-all group">
                        <span class="material-symbols-outlined text-[22px]">laptop_chromebook</span>
                        <span class="text-[13px] font-medium">Sản phẩm Laptop</span>
                    </a>
                    <a href="QuanLyLoai.aspx" id="nav_loai" runat="server" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-500 hover:bg-slate-50 transition-all">
                        <span class="material-symbols-outlined text-[22px]">category</span>
                        <span class="text-[13px] font-medium">Danh mục loại</span>
                    </a>
                    <a href="QuanLyHang.aspx" id="nav_hang" runat="server" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-500 hover:bg-slate-50 transition-all">
                        <span class="material-symbols-outlined text-[22px]">factory</span>
                        <span class="text-[13px] font-medium">Hãng sản xuất</span>
                    </a>

                    <div class="pt-5 pb-2 px-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">Kinh doanh & Khách hàng</div>

                    <a href="QuanLyKhachHang.aspx" id="nav_kh" runat="server" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-500 hover:bg-slate-50 transition-all">
                        <span class="material-symbols-outlined text-[22px]">group</span>
                        <span class="text-[13px] font-medium">Khách hàng</span>
                    </a>
                    <a href="QuanLyDonHang.aspx" id="nav_dh" runat="server" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-500 hover:bg-slate-50 transition-all relative group">
                        <span class="material-symbols-outlined text-[22px]">shopping_cart</span>
                        <span class="text-[13px] font-medium">Đơn hàng mới</span>
                    </a>

                    <div class="pt-5 pb-2 px-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">Hệ thống</div>

                    <a href="../Public/Default.aspx" id="nav_home" runat="server" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-500 hover:bg-slate-50 transition-all">
                        <span class="material-symbols-outlined text-[22px]">storefront</span>
                        <span class="text-[13px] font-medium">Xem trang bán hàng</span>
                    </a>

                    <div class="p-4 border-t border-slate-100 bg-slate-50/50 mt-auto">
                        <asp:LinkButton ID="lbtnThoat" runat="server" OnClick="lbtnThoat_Click"
