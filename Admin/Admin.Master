                            </div>
                        </div>

                        <div class="h-8 w-[1px] bg-slate-200"></div>

                        <div class="flex items-center gap-3">
                            <div class="text-right hidden sm:block">
                                <p class="text-[12px] font-bold text-slate-800">
                                    <asp:Literal ID="ltrAdminName" runat="server" />
                                </p>
                                <p class="text-[10px] text-emerald-500 font-medium flex items-center justify-end gap-1">
                                    <span class="size-1.5 bg-emerald-500 rounded-full animate-pulse"></span>Online
                                </p>
                            </div>
                            <div class="size-9 rounded-xl overflow-hidden ring-2 ring-slate-100 shadow-sm">
                                <img src="https://ui-avatars.com/api/?name=Admin&background=2d3436&color=fff" class="size-full object-cover" />
                            </div>
                        </div>
                    </div>
                </header>

                <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
                    <asp:ContentPlaceHolder ID="MainContent" runat="server"></asp:ContentPlaceHolder>
                </div>
            </main>
        </div>
    </form>

    <script>
        // LOGIC UI DROP-DOWN
        const notiBtn = document.getElementById('notificationBtn');
        const notiDropdown = document.getElementById('notificationDropdown');
        notiBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            notiDropdown.classList.toggle('hidden');
        });
        document.addEventListener('click', () => notiDropdown.classList.add('hidden'));

        // REALTIME NOTIFICATIONS LOGIC - UPDATED
        let lastMaxOrderId = parseInt(sessionStorage.getItem('lastMaxOrderId') || '0', 10) || 0;

        // Audio: trình duyệt thường chặn autoplay nếu chưa có "user gesture"
        const bellAudio = new Audio('https://assets.mixkit.co/active_storage/sfx/2869/2869-preview.mp3');
        bellAudio.preload = 'auto';
        let isAudioUnlocked = false;

        async function unlockAudioOnce() {
            if (isAudioUnlocked) return;
            try {
                // Thử "warm up" audio bằng 1 lần play/pause (muted) sau user gesture
                bellAudio.muted = true;
                await bellAudio.play();
                bellAudio.pause();
                bellAudio.currentTime = 0;
                bellAudio.muted = false;
                isAudioUnlocked = true;
                console.log('[noti] audio unlocked');
            } catch (e) {
                // Nếu vẫn bị chặn, lần sau click khác sẽ thử lại
                console.warn('[noti] audio unlock failed:', e);
            }
        }

        function playBell() {
            if (!isAudioUnlocked) return; // chưa unlock thì bỏ qua (tránh spam lỗi)
            try {
                bellAudio.currentTime = 0;
                bellAudio.play().catch((e) => console.warn('[noti] bell play blocked:', e));
            } catch (e) {
                console.warn('[noti] bell play error:', e);
            }
        }

        function checkNewOrders() {
            fetch(window.location.pathname + '/GetNewOrders', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json; charset=utf-8' },
                body: JSON.stringify({})
            })
                .then(res => res.json())
                .then(data => {
                    if (!data.d || data.d.error || data.d.length === 0) return;

                    const allOrders = data.d;
                    const currentMaxId = Math.max(...allOrders.map(o => parseInt(o.ID)));

                    const badge = document.getElementById('badgeCount');
                    const list = document.getElementById('notificationList');
                    const icon = document.getElementById('notificationBtn').querySelector('.material-symbols-outlined');

                    // --- LOGIC HIỂN THỊ "5+" ---
                    const count = allOrders.length;
                    if (count > 0) {
                        // Sửa thành >= 5 để khi có đúng 5 đơn cũng hiện "5+"
                        badge.innerText = count >= 5 ? "5+" : count;
                        badge.classList.remove('hidden');

                        // Điều chỉnh giao diện badge cho đẹp
                        if (count >= 5) {
                            badge.classList.add('px-1.5', 'w-auto', 'min-w-[18px]');
                            badge.classList.remove('size-4');
                        } else {
                            badge.classList.remove('px-1.5', 'w-auto', 'min-w-[18px]');
                            badge.classList.add('size-4');
                        }
                    } else {
                        badge.classList.add('hidden');
                    }

                    // LOGIC NỔ CHUÔNG: Chỉ nổ khi ID mới nhất lớn hơn ID cũ đã lưu
                    if (lastMaxOrderId !== 0 && currentMaxId > lastMaxOrderId) {
                        icon.classList.add('animate-ring');
                        playBell();

                        // Tạo một thông báo trình duyệt (nếu muốn)
                        console.log("Có đơn hàng mới: #" + currentMaxId);

                        setTimeout(() => icon.classList.remove('animate-ring'), 5000);
                    }

                    // Cập nhật lại ID lớn nhất vào bộ nhớ
                    lastMaxOrderId = currentMaxId;
                    sessionStorage.setItem('lastMaxOrderId', lastMaxOrderId);

                    // Render danh sách
                    list.innerHTML = allOrders.map(o => `
            <a href="QuanLyDonHang.aspx?SoDH=${o.ID}" class="flex items-center gap-4 p-4 hover:bg-blue-50/40 transition-all border-b border-slate-50 group">
                <div class="size-10 bg-blue-50 text-[#0984e3] rounded-xl flex items-center justify-center shrink-0 group-hover:bg-[#0984e3] group-hover:text-white transition-colors">
                    <span class="material-symbols-outlined text-xl">shopping_bag</span>
                </div>
                <div class="min-w-0">
                    <p class="text-[12px] font-bold text-slate-800">Đơn hàng #${o.ID} mới</p>
                    <p class="text-[11px] text-slate-500 truncate font-medium">${o.User}</p>
                    <p class="text-[9px] text-[#0984e3] mt-1 font-bold italic">${o.Time}</p>
                </div>
            </a>`).join('');
                });
        }

        document.addEventListener("DOMContentLoaded", () => {
            // Thử unlock audio ngay khi user click lần đầu ở bất kỳ đâu
            document.addEventListener('click', unlockAudioOnce, { capture: true, once: false });
            // Click vào chuông cũng sẽ unlock (trường hợp user chỉ tương tác ở đây)
            notiBtn.addEventListener('click', unlockAudioOnce);
            checkNewOrders(); // Chạy ngay khi load
            setInterval(checkNewOrders, 10000); // Check mỗi 10s cho đỡ tốn tài nguyên
        });
    </script>
</body>
</html>
